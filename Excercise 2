Name = input("Name of student: ")
Science = input("Grade in Science: ")
Math = input("Grade in Math: ")
English = input ("Grade in English: ")
total = float(Science) + float (Math) + float(English)
Average = float(total) /3
print("Name: ", Name)
print("Science: ", Science)
print("Math: ",Math)
print("English: ",English)
print("Average: ",Average)

if Average < 75:
    print("U failed!")
if Average > 75:
    print("Congratulation! You passed")
